{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "outDir": "public/dist",
    "rootDir": "src",
    "strict": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "types": ["svelte"],
    "moduleResolution": "node"
  },
  "include": ["src/**/*", "src/**/*.svelte", "vite.config.ts", "vite-env.d.ts"]
}
